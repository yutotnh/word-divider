{
  "name": "word-divider",
  "displayName": "Word Divider",
  "description": "Enable cursor movement in Japanese sentences on a word-by-word basis",
  "version": "0.1.1",
  "publisher": "yutotnh",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/yutotnh/word-divider/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yutotnh/word-divider.git"
  },
  "homepage": "https://github.com/yutotnh/word-divider",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "docs/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:word-divider.cursorWordLeft",
    "onCommand:word-divider.cursorWordEndRight",
    "onCommand:word-divider.cursorWordLeftSelect",
    "onCommand:word-divider.cursorWordEndRightSelect",
    "onCommand:word-divider.deleteWordLeft",
    "onCommand:word-divider.deleteWordRight"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "word-divider.cursorWordLeft",
        "key": "ctrl+left",
        "mac": "alt+left",
        "when": "textInputFocus && !accessibilityModeEnabled"
      },
      {
        "command": "word-divider.cursorWordEndRight",
        "key": "ctrl+right",
        "mac": "alt+right",
        "when": "textInputFocus && !accessibilityModeEnabled"
      },
      {
        "command": "word-divider.cursorWordLeftSelect",
        "key": "ctrl+shift+left",
        "mac": "shift+alt+left",
        "when": "textInputFocus && !accessibilityModeEnabled"
      },
      {
        "command": "word-divider.cursorWordEndRightSelect",
        "key": "ctrl+shift+right",
        "mac": "shift+alt+right",
        "when": "textInputFocus && !accessibilityModeEnabled"
      },
      {
        "command": "word-divider.deleteWordLeft",
        "key": "ctrl+backspace",
        "mac": "alt+backspace",
        "when": "textInputFocus && !editorReadonly"
      },
      {
        "command": "word-divider.deleteWordRight",
        "key": "ctrl+delete",
        "mac": "alt+delete",
        "when": "textInputFocus && !editorReadonly"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "vscode:publish": "vsce publish",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "cspell": "^8.3.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
